<head>
  <%- include('../partials/head'); %>
</head>


<style>
  .top-buffer {
    margin-top: 60px;
  }
</style>

<body class="container">
  <header>
    <%- include('../partials/header'); %>
  </header>

  <main class="container pt-5">
    <div class="p-5 mb-4 bg-white rounded-3 top-buffer">
      <h2 class="text-center pb-2">
        Edit Invoice
      </h2>
      <form action="/invoices/update" method="post">
        <div class="container pt-2">
          <div class="row">
            <div class="col-sm">
              Invoice Number
              <p class="pt-1">
                <%= invoice_data.invoice_id%>
              </p>
            </div>
            <div class="col-sm">
              Customer
              <p class="pt-1">
                <%= invoice_data.customer_id %>
              </p>
            </div>
            <div class="col-sm">
              Date Generated
              <p class="pt-1">
                <%= invoice_data.invoice_date %>
              </p>
            </div>
            <div class="col-sm">
              Total
              <p class="pt-1">
                <%= invoice_data.invoice_total %>
              </p>
            </div>
          </div>
        </div>
        <div class="col-md-6 mb-3">
          <label for="payment_status" class="form-label">Payment Status</label>
          <select id="payment_status" name="payment_status" class="form-select">                  
            <option selected>In Process</option>
            <option>Payment Pending</option>
            <option>Paid</option>
          </select>
        </div>
        <div class="col-md-6 mb-3">
            <label for="date_paid" class="form-label">Date Paid</label>
            <input type="date" class="form-control" name="date_paid" id="date_paid" value=<%= invoice_data.date_paid %>>
        </div>

        <div class="col-md-6 mb-3">
          <button type="submit" class="btn btn-primary">Update</button>
          <a class="btn btn-secondary" href="/invoices" role="button">Cancel</a>
      </div>
        
      </form>


    </div>
    <footer>
      <%- include('../partials/footer'); %>
  </footer>
  </main>

</body>