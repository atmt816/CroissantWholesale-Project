<head>
    <%- include('../partials/head'); %>
  </head>
  
  
  <style>
    .top-buffer {
      margin-top: 60px;
    }
  </style>
  
  <body class="container">
    <header>
      <%- include('../partials/header'); %>
    </header>
  
    <main class="container pt-5">
      <div class="p-5 mb-4 bg-white rounded-3 top-buffer">
        <h2 class="text-center pb-2">
          Invoices
        </h2>

        <table class="table table-hover">
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Customer</th>
              <th scope="col">Date Generated</th>
              <th scope="col">Total</th>
              <th scope="col">Status</th>
              <th scope="col">Date Paid</th>
  
            </tr>
          </thead>
          <tbody>
            <% invoice_data.forEach(function(invoice_data) { %>
              <tr>
                <td>
                  <a style="text-decoration:none" href="/invoicesinfo/<%= invoice_data.invoice_id%>">
                    <%= invoice_data.invoice_id%>
                  </a>
                </td>
                <td>
                  <a style="text-decoration:none" href="/invoicesinfo/<%= invoice_data.invoice_id%>">
                    <%= invoice_data.customer_id%>
                  </a>
                </td>
                <td>
                  <%= invoice_data.invoice_date%>
                </td>
                <td>
                  <%= invoice_data.invoice_total%>
                </td>
                <td>
                  <%= invoice_data.payment_status%>
                </td>
                <td>
                  <%= invoice_data.date_paid%>
                </td>
                
  
  
              </tr>
              <% }); %>
  
          </tbody>
        </table>
  
  
  
      </div>
  
    </main>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>
  </body>