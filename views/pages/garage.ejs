<head>
    <%- include('../partials/head'); %>
  </head>
  
  
  <style>
    .top-buffer {
      margin-top: 60px;
    }
  </style>
  
  <body class="container">
    <header>
      <%- include('../partials/header'); %>
    </header>
  
    <main class="container pt-5">
      <div class="p-5 mb-4 bg-white rounded-3 top-buffer">
        <h2 class="text-center pb-2">
            Auto Shops
        </h2>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
          Create New Auto Shop
        </button>
  
        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog modal-lg">
            <div class="modal-content">
  
              <div class="modal-header">
                <h4 class="modal-title" id="exampleModalLabel">Create New Auto Shop</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <form action="/garage/add" method="post" class="row g-3">
  
                  <div class="col-md-6">
                    <label for="firstname" class="form-label">Shop Name</label>
                    <input class="form-control" type="text" name="garage_name" id="garage_name">
                    <div class="col-md-6">
                      <label for="inputmodel" class="form-label">Shop Hours</label>
                      <input class="form-control" type="text" name="street" id="street"  placeholder="123 Example Street">
                    </div>
  
                  </div>
                  <div class="col-md-6">
                    <label for="lastname" class="form-label">Phone</label>
                    <input class="form-control" type="phone" name="phone_number" id="phone_number"
                      placeholder="0000000000">
                  </div>
                  <div class="col-md-6">
                    <label for="inputmodel" class="form-label">Street</label>
                    <input class="form-control" type="text" name="street" id="street"  placeholder="123 Example Street">
                  </div>
                  <br>
                  <div class="col-md-6">
                    <label for="firstname" class="form-label">City</label>
                    <input class="form-control" type="text" name="city" id="city" placeholder="Ex. Houston">
                  </div>
                  <label for="inputState" class="form-label">State</label>
                  <select class="form-select" name="states" id="states">
                    <% states.forEach(function(states) { %>              
                    <option value=<%=states.state_code_id %>><%=states.state %></option>
                    <% }); %>
                </select>
                <div class="col-md-6">
                  <label for="inputmodel" class="form-label">Zipcode</label>
                  <input class="form-control" type="text" name="zipcode" id="zipcode"  placeholder="00000">
                </div>
                  <div class="col-md-6">
                    <label for="inputstatus" class="form-label">Status</label>
                    <select id="status" name="status" class="form-select">
                      <option selected>Active</option>
                      <option>Inactive</option>
                    </select>
                  </div>
  
  
  
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Create New Shop</button>
                </form>
              </div>
            </div>
          </div>
        </div>
  
        <table class="table table-hover">
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Shop Name</th>
              <th scope="col">Business Hours</th>
              <th scope="col">Phone</th>
              <th scope="col">Address</th>
              <th scope="col">Status</th>
              
  
            </tr>
          </thead>
          <tbody>
            <% garage_data.forEach(function(garage_data) { %>
              <tr>
                <td>
                  <a>
                    <%= garage_data.garage_id%>
                  </a>
                </td>
                <td>
                  <a>
                    <%= garage_data.garage_name%>
                  </a>
                </td>
                <td>
                    <%= garage_data.garage_hrs%>
                  </td>
                <td>
                  <%= garage_data.phone%>
                </td>
                <td>
                  <%= garage_data.street%> <%= garage_data.city%>, <%= garage_data.state_code_id%>, <%= garage_data.zipcode%>
                </td>
                <td>
                    <%= garage_data.status%>
                  </td>
                  <td>
                    <a style="text-decoration:none" href="/garageedit/<%= garage_data.garage_id%>"> Edit</a>
                    </td>
                
  
  
              </tr>
              <% }); %>
  
          </tbody>
        </table>
  
  
  
      </div>
  
    </main>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>
  </body>