<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>


<style>
    .top-buffer {
        margin-top: 60px;
    }
    
</style>

<body class="container">
    <header>
        <%- include('../partials/header'); %>
    </header>
    
    <main class="container pt-5">
        <div class="p-5 mb-4 bg-white rounded-3 top-buffer">
            <h2 class="text-center">
                Welcome home!
                <div><td>
                  <a class="btn btn-secondary" href="/deliverysheet" role="button">Daily Delivery Report</a>
              </td></div>
            </h2>
        </div>
        <div style="float: left; width: 45%;">
          <div style="height:350px; margin-bottom:20px;">
            <!--chart that counts orders by month of current year-->
            <h3>Monthly Order Tracker</h3>
            <canvas id="myChart"></canvas>
          </div>
          <div>
            <!--table that shows upcoming orders 8 days out-->
            <table class="table table-hover">
              <h3>Recent Inventory</h3>
              <thead>
                <tr>
                  <th scope="col">Vendor</th>
                  <th scope="col">Item</th>
                  <th scope="col">Quantity</th>
                  <th scope="col">Date Bought</th>
                </tr>
              </thead>
              <tbody>
                  <% vendinv_data.forEach(function(vendinv_data) { %>
                      <tr>
                        <td>
                            <%= vendinv_data.vendor_name%>
                          </a>
                        </td>
                        <td>
                          <a>
                            <%= vendinv_data.item_name%>
                          </a>
                        </td>
                        <td>
                          <a>
                            <%= vendinv_data.item_amount%>
                          </a>
                        </td>
                        <td>
                          <a>
                            <%if (vendinv_data.date_bought) { %>
                              <%= moment(vendinv_data.date_bought).format('MMMM Do YYYY') %> 
                              <% } else { %><% } %>
                           
                          </a>
                        </td>
          
                      </tr>
                      <% }); %>
              </tbody>
            </table>
          </div>
          </div>

        <div style="float: right; width:45%;">
          <div style="height:350px;margin-bottom:20px;">
            <!-- table that shows 5 mostt recent inventory bought-->
            <table class="table table-hover">
                <h3>Upcoming Orders</h3>
                <thead>
                  <tr>
                    <th scope="col">Order ID</th>
                    <th scope="col">Delivery Date</th>
                    <th scope="col">Product Name</th>
                    <th scope="col">Quantity</th>
                  </tr>
                </thead>
                <tbody>
                    <% weekly_data.forEach(function(weekly_data) { %>
                        <tr>
                          <td>
                              <%= weekly_data.Order_ID%>
                            </a>
                          </td>
                          <td>
                            <a>
                              <%if (weekly_data.Delivery_Date) { %>
                                <%= moment(weekly_data.Delivery_Date).format('MMMM Do YYYY') %> 
                                <% } else { %><% } %>
                            </a>
                          </td>
                          <td>
                            <a>
                              <%= weekly_data.Product_Name%>
                            </a>
                          </td>
                          <td>
                            <a>
                              <%= weekly_data.Quantity%>
                            </a>
                          </td>
            
                        </tr>
                        <% }); %>
                </tbody>
              </table>
            </div>
            <div>
              <!-- chart that counts total products delivered by products-->
              <h3>Delivered Product Counter</h3>
            <canvas id="myChart2"></canvas>
            </div>
        </div>
        
          
          <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
          
          <script>
            var Data = JSON.parse(`<%- JSON.stringify(chartApi) %>`);
            var month = []
            for(var i = 0; i < Data.length; i++){
                month.push(Data[i].date_produced);
            }
            var count =[]
            for(var i = 0; i < Data.length; i++){
                count.push(Data[i].count);
            }
            
            var Data2 = JSON.parse(`<%- JSON.stringify(prodcount_data) %>`);
            var prodName = []
            for(var i = 0; i < Data2.length; i++){
                prodName.push(Data2[i].product_name);
            }
            var prodCount=[]
            for(var i = 0; i < Data2.length; i++){
                prodCount.push(Data2[i].total_quantity);
            }

           function lineChart(){

            let ctx = document.getElementById('myChart');
          
            let chart = new Chart(ctx, {
              type: 'line',
              data: {
                labels: month,
                datasets: [{
                  label: '# of Orders',
                  data: count,
                  borderWidth: 1,
                  backgroundColor: '#fefcf1',
                  borderColor: 'black',
                }]
              },
              options: {
                scales: {
                  y: {
                    beginAtZero: true
                  }
                }
              }
            });
        }
        function barChart(){

          let ctx = document.getElementById('myChart2');

          let chart = new Chart(ctx, {
            type: 'bar',
            data: {
              labels: prodName,
              datasets: [{
                label: '# of Orders',
                data: prodCount,
                borderWidth: 1,
                backgroundColor: '#fefcf1',
                borderColor: 'black',
              }]
            },
            options: {
              scales: {
                y: {
                  beginAtZero: true
                }
              }
            }
            });
          }
        lineChart();
        barChart();

        
            
          </script>
        


    </main>
</body>